# MECE Audience Segmentation Configuration
# Copy this file to .env and update the values as needed

# Data Configuration
MIN_SEGMENT_SIZE=500
MAX_SEGMENT_SIZE=20000
DEFAULT_N_USERS=50000

# Analysis Configuration
AOV_HIGH_PERCENTILE=80
AOV_MEDIUM_PERCENTILE=50
ENGAGEMENT_HIGH_THRESHOLD=0.7
ENGAGEMENT_MEDIUM_THRESHOLD=0.4
PROFITABILITY_HIGH_THRESHOLD=0.7

# Output Configuration
OUTPUT_DIR=outputs
LOG_LEVEL=INFO

# Database Configuration (if using real data)
# DATABASE_URL=postgresql://user:password@localhost:5432/segmentation_db

# API Configuration (if using external APIs)
# API_KEY=your_api_key_here
# API_BASE_URL=https://api.example.com
